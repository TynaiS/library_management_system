<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.text.Font?>
<AnchorPane fx:id="addBookForm" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.database_final_javafx.controller.AddBookController">
    <children>
        <Label text="Add New Book" layoutX="20.0" layoutY="20.0" >
            <font>
                <Font name="Arial" size="20" />
            </font>
        </Label>

        <Label text="Author" layoutX="20.0" layoutY="60.0"/>
        <ComboBox fx:id="authorComboBox" layoutX="100.0" layoutY="60.0" prefWidth="200.0"/>

        <Label text="Title" layoutX="20.0" layoutY="100.0"/>
        <TextField fx:id="titleField" layoutX="100.0" layoutY="100.0" prefWidth="200.0"/>

        <Label text="Description" layoutX="20.0" layoutY="140.0"/>
        <TextField fx:id="descriptionField" layoutX="100.0" layoutY="140.0" prefWidth="200.0"/>

        <Label text="Price" layoutX="20.0" layoutY="180.0"/>
        <TextField fx:id="priceField" layoutX="100.0" layoutY="180.0" prefWidth="200.0"/>

        <Label text="Stock Quantity" layoutX="20.0" layoutY="220.0"/>
        <TextField fx:id="stockField" layoutX="100.0" layoutY="220.0" prefWidth="200.0"/>

        <Label text="Available" layoutX="20.0" layoutY="260.0"/>
        <CheckBox fx:id="availableCheckBox" layoutX="100.0" layoutY="260.0"/>

        <Label fx:id="errorMessageLabelAddBook" layoutX="400.0" layoutY="180.0" textFill="red" visible="false" />

        <Button text="Add Book" layoutX="100.0" layoutY="300.0" onAction="#handleAddBook"/>
    </children>
</AnchorPane>
