        <ScrollPane layoutX="8.0" layoutY="48.0" prefHeight="464.0" prefWidth="735.0">
            <content>
                <!-- Wrapping GridPane in StackPane -->
                <StackPane prefHeight="465.0" prefWidth="720.0">
                    <GridPane fx:id="bookGrid" alignment="CENTER" hgap="10.0" vgap="10.0">
